<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{{shop.name}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    /* â€”â€”â€” General (kept light; most critical styles are inlined) â€”â€”â€” */
    body { margin:0; padding:0; background:#0b0b0b; -webkit-text-size-adjust:100%; }
    a { color:#FFF200; text-decoration:none; }
    /* Fallback classes for clients that honor <style> */
    .status      { display:inline-block; padding:6px 12px; border-radius:9999px; font:700 12px/1 Arial,Helvetica,sans-serif; text-transform:uppercase; letter-spacing:.05em; border:1px solid rgba(255,255,255,.12); background:#111; color:#f3f3f3; }
    .status--paid{ background:#093; color:#d9ffe8; border-color:#1a5; }
    .status--completed{ background:#0b3a80; color:#e6f0ff; border-color:#1e4fa8; }
    .code { font-family:ui-monospace,SFMono-Regular,Menlo,Consolas,monospace; font-size:12px; background:#111; color:#f3f3f3; padding:2px 6px; border:1px solid rgba(255,255,255,.12); border-radius:6px; }
    @media (max-width:480px){ .container{ padding:16px !important; } .card{ padding:18px !important; } th,td{ font-size:13px !important; padding:10px !important; } .grand{ font-size:16px !important; } .btn{ padding:10px 16px !important; font-size:13px !important; } }
  </style>
</head>
<body>
  <!-- Outer container -->
  <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background:#0b0b0b;">
    <tr>
      <td align="center" style="padding:24px 12px;">
        <!-- Card -->
        <table class="container" role="presentation" width="720" cellspacing="0" cellpadding="0" border="0" style="width:100%; max-width:720px; background:#0f0f0f; border:1px solid #2d2d2d; border-radius:14px; box-shadow:0 10px 30px rgba(0,0,0,.4); color:#f3f3f3;">
          <tr>
            <td class="card" style="padding:28px 24px;">

              <!-- Header -->
              {{#if (eq mode "receipt")}}
                <h2 style="margin:0 0 6px 0; font:700 22px/1.3 Arial,Helvetica,sans-serif; color:#FFF200; letter-spacing:.02em;">Thanks {{customer.name}}, weâ€™ve received your order!</h2>
                <span class="status" style="display:inline-block; padding:6px 12px; border-radius:9999px; font:700 12px/1 Arial,Helvetica,sans-serif; text-transform:uppercase; letter-spacing:.05em; border:1px solid rgba(255,255,255,.12); background:#111; color:#f3f3f3;">New</span>
              {{/if}}

              {{#if (eq mode "paid")}}
                <h2 style="margin:0 0 6px 0; font:700 22px/1.3 Arial,Helvetica,sans-serif; color:#FFF200; letter-spacing:.02em;">Payment confirmed ðŸŽ‰</h2>
                <span class="status status--paid" style="display:inline-block; padding:6px 12px; border-radius:9999px; font:700 12px/1 Arial,Helvetica,sans-serif; text-transform:uppercase; letter-spacing:.05em; border:1px solid #1a5; background:#093; color:#d9ffe8;">Paid</span>
              {{/if}}

              {{#if (eq mode "completed")}}
                <h2 style="margin:0 0 6px 0; font:700 22px/1.3 Arial,Helvetica,sans-serif; color:#FFF200; letter-spacing:.02em;">Your order is complete âœ…</h2>
                <span class="status status--completed" style="display:inline-block; padding:6px 12px; border-radius:9999px; font:700 12px/1 Arial,Helvetica,sans-serif; text-transform:uppercase; letter-spacing:.05em; border:1px solid #1e4fa8; background:#0b3a80; color:#e6f0ff;">Completed</span>
              {{/if}}

              <!-- Meta -->
              <p style="margin:14px 0 0 0; font:14px/1.6 Arial,Helvetica,sans-serif; color:#d7d7d7;">
                Order ID:
                <span class="code" style="font-family:ui-monospace,SFMono-Regular,Menlo,Consolas,monospace; font-size:12px; background:#111; color:#f3f3f3; padding:2px 6px; border:1px solid rgba(255,255,255,.12); border-radius:6px;">
                  #{{#if order.id}}{{order.id}}{{else}}{{order._id}}{{/if}}
                </span><br/>
                {{#if order.createdAt}}Placed: {{datetime order.createdAt}}<br/>{{/if}}
                {{#if order.updatedAt}}Updated: {{datetime order.updatedAt}}{{/if}}
              </p>

              <!-- Divider -->
              <div style="height:1px; background:rgba(255,255,255,.12); margin:18px 0;"></div>

              <!-- Items header -->
              <h3 style="margin:0 0 10px 0; font:700 14px/1 Arial,Helvetica,sans-serif; text-transform:uppercase; letter-spacing:.06em; color:#FFF200;">Items</h3>

              <!-- Table wrapper (card-like) -->
              <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="border:1px solid rgba(255,255,255,.12); border-radius:12px; overflow:hidden; background:#0f0f0f;">
                <thead>
                  <tr>
                    <th align="left"  style="background:#000; color:#FFF200; font:700 14px/1 Arial,Helvetica,sans-serif; text-transform:uppercase; letter-spacing:.06em; padding:12px 14px; border-bottom:1px solid rgba(255,255,255,.12);">Item</th>
                    <th align="right" style="background:#000; color:#FFF200; font:700 14px/1 Arial,Helvetica,sans-serif; text-transform:uppercase; letter-spacing:.06em; padding:12px 14px; border-bottom:1px solid rgba(255,255,255,.12); white-space:nowrap;">Qty</th>
                    <th align="right" style="background:#000; color:#FFF200; font:700 14px/1 Arial,Helvetica,sans-serif; text-transform:uppercase; letter-spacing:.06em; padding:12px 14px; border-bottom:1px solid rgba(255,255,255,.12); white-space:nowrap;">Price</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each items}}
                  <tr>
                    <td style="padding:14px; font:14px/1.5 Arial,Helvetica,sans-serif; color:#f3f3f3; background:#111; border-bottom:1px solid rgba(255,255,255,.08);">{{this.name}}</td>
                    <td align="right" style="padding:14px; font:14px/1.5 Arial,Helvetica,sans-serif; color:#f3f3f3; background:#111; border-bottom:1px solid rgba(255,255,255,.08); white-space:nowrap;">{{this.qty}}</td>
                    <td align="right" style="padding:14px; font:14px/1.5 Arial,Helvetica,sans-serif; color:#f3f3f3; background:#111; border-bottom:1px solid rgba(255,255,255,.08); white-space:nowrap;">{{currency this.price ../currency}}</td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>

              <!-- Totals -->
              <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="margin-top:12px;">
                <tr>
                  <td style="padding:4px 0; font:14px/1.6 Arial,Helvetica,sans-serif; color:#eaeaea;">Subtotal</td>
                  <td align="right" style="padding:4px 0; font:700 14px/1.6 Arial,Helvetica,sans-serif; color:#f3f3f3;">{{currency totals.subtotal currency}}</td>
                </tr>
                <tr>
                  <td style="padding:4px 0; font:14px/1.6 Arial,Helvetica,sans-serif; color:#eaeaea;">GST</td>
                  <td align="right" style="padding:4px 0; font:700 14px/1.6 Arial,Helvetica,sans-serif; color:#f3f3f3;">{{currency totals.gst currency}}</td>
                </tr>
                <tr>
                  <td style="padding:4px 0; font:14px/1.6 Arial,Helvetica,sans-serif; color:#eaeaea;">Delivery</td>
                  <td align="right" style="padding:4px 0; font:700 14px/1.6 Arial,Helvetica,sans-serif; color:#f3f3f3;">{{currency totals.delivery currency}}</td>
                </tr>
                <tr>
                  <td colspan="2" style="padding:10px 0;">
                    <div style="height:1px; background:rgba(255,255,255,.12);"></div>
                  </td>
                </tr>
                <tr>
                  <td class="grand" style="padding:4px 0; font:800 18px/1.6 Arial,Helvetica,sans-serif; color:#FFF200;">Grand Total</td>
                  <td align="right" class="grand" style="padding:4px 0; font:800 18px/1.6 Arial,Helvetica,sans-serif; color:#FFF200;">{{currency totals.grandTotal currency}}</td>
                </tr>
              </table>
              {{!-- PAYMENT MODE BLOCK --}}
{{#if (eq order.paymentMode "COD")}}
  <p><strong>Payment Mode:</strong> Cash on Delivery (COD)</p>
{{else if (eq order.paymentMode "PAY_TO_CALL")}}
  <div style="margin-top:10px;padding:12px;border:1px dashed #ddd;border-radius:6px;">
    <p><strong>Payment Mode:</strong> Pay to Call</p>
    <p><strong>Bank Details:</strong></p>
    <ul style="margin:0 0 0 16px;padding:0;">
      <li>Account Name: Momâ€™s Charcoal & Grill</li>
      <li>Account No: 123 222 222323 2</li>
      <li>After payment, please call us at 732-398-9022 to confirm.</li>
    </ul>
  </div>
{{/if}}

              <!-- Mode-specific note -->
              {{#if (eq mode "receipt")}}
                <p style="margin:14px 0 0 0; font:14px/1.6 Arial,Helvetica,sans-serif; color:#d7d7d7;">Weâ€™ll notify you when payment is confirmed.</p>
              {{/if}}
              {{#if (eq mode "paid")}}
                <p style="margin:14px 0 0 0; font:14px/1.6 Arial,Helvetica,sans-serif; color:#d7d7d7;">Your order is now being prepared.</p>
              {{/if}}
              {{#if (eq mode "completed")}}
                <p style="margin:14px 0 0 0; font:14px/1.6 Arial,Helvetica,sans-serif; color:#d7d7d7;">Thank you for choosing {{shop.name}}!</p>
              {{/if}}

              <!-- CTA -->
              <table role="presentation" cellspacing="0" cellpadding="0" border="0" style="{{#unless order.trackingUrl}}display:none;{{/unless}} margin-top:16px;">
                <tr>
                  <td align="left">
                    <a class="btn" href="{{order.trackingUrl}}" target="_blank"
                       style="display:inline-block; padding:12px 20px; background:#FFF200; color:#111 !important; border-radius:10px; font:800 13px/1 Arial,Helvetica,sans-serif; text-transform:uppercase; letter-spacing:.06em; border:1px solid rgba(255,255,255,.12);">
                      View Order
                    </a>
                  </td>
                </tr>
              </table>

              <!-- Divider -->
              <div style="height:1px; background:rgba(255,255,255,.12); margin:18px 0;"></div>

              <!-- Footer -->
              <p style="margin:0; font:12px/1.5 Arial,Helvetica,sans-serif; color:#9aa0a6; text-align:center;">
                {{shop.name}} â€¢ {{shop.address}} â€¢ {{shop.phone}}<br/>
                <a href="mailto:{{shop.supportEmail}}" style="color:#c9c9c9; text-decoration:none;">{{shop.supportEmail}}</a>
              </p>

            </td>
          </tr>
        </table>
        <!-- /Card -->
      </td>
    </tr>
  </table>
</body>
</html>
